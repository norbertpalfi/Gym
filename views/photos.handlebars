{{>topbar data=data}}
<h1 class="text-center mb-3 display-1">DiverCity - Gallery</h1>

<div class="card mb-2">
    <div class="card-header">
        Detailed information about our available features:
    </div>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
            <p>Details:</p>
            <p class="blockquote-footer">ID: <cite title="Source Title">{{ID}}</cite></p>
            <p class="blockquote-footer">Price per hour: <cite title="Source Title">{{PPH}}</cite>
            </p>
            {{#if AMOUNT}}
            <p class="blockquote-footer">Amount of pieces available: <cite
                    title="Source Title">{{AMOUNT}}</cite></p>
            {{/if}}
            {{#each info}}
            {{#if this.NamePath}}
            <img src="/uploadDir/{{this.NamePath}}" alt={{this.OriginalName}} class="width: 100% rounded mb-2 mt-2">
            {{else}}
            <p class="blockquote-footer">No image has been uploaded yet.</p>
            {{/if}}
            {{/each}}
        </blockquote>
    </div>
</div>

<div class="card">
    <div class="card-header">
        Timetable
    </div>
    <div class="card-body">
        <p id="occupied{{ID}}"></p>
    </div>
</div>
<script type="text/javascript">
   getTimetable({{{ID}}});
</script>

{{#if adminPics}}
<form action="/halls/{{ID}}" method="post" enctype="multipart/form-data">
    <div class="card mt-2">
        <div class="card-header">
            Upload/Change picture...
        </div>
        <div class="card-body">

            <div class="input-group">
                <div class="custom-file">
                    <input type="file" name="myfile" id="myfile" accept="image/*" class="custom-file-input">
                    <label class="custom-file-label" for="Files">Leave this empty to delete picture.</label>
                </div>
                <div class="input-group-append">
                    <input type="submit" value="Add image" class="btn btn-success">
                </div>
            </div>
        </div>
    </div>
</form>
{{/if}}

<a class="btn btn-info btn-block mt-2 mb-2" role="button" href="/">Back</a>

